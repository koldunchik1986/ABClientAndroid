<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Основные настройки">

        <SwitchPreferenceCompat
            app:key="do_prompt_exit"
            app:title="Запрашивать подтверждение при выходе"
            app:defaultValue="true" />

        <SwitchPreferenceCompat
            app:key="do_http_log"
            app:title="HTTP-логирование"
            app:summary="Логирование HTTP-запросов и ответов"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="do_tex_log"
            app:title="Текстовое логирование"
            app:summary="Логирование текстовых сообщений"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="show_performance"
            app:title="Показывать производительность"
            app:summary="Отображение информации о производительности"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="cache_refresh"
            app:title="Обновлять кэш"
            app:summary="Всегда обновлять кэш при запросах"
            app:defaultValue="false" />

        <Preference
            app:key="clear_cache"
            app:title="Очистить кэш"
            app:summary="Удаление всех кэшированных данных" />

        <Preference
            app:key="clear_logs"
            app:title="Очистить логи"
            app:summary="Удаление всех файлов логов" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Настройки прокси">

        <SwitchPreferenceCompat
            app:key="do_proxy"
            app:title="Использовать прокси"
            app:summary="Использование внешнего прокси-сервера"
            app:defaultValue="false" />

        <EditTextPreference
            app:key="proxy_address"
            app:title="Адрес прокси"
            app:summary="Формат: host:port"
            app:dependency="do_proxy" />

        <EditTextPreference
            app:key="proxy_username"
            app:title="Имя пользователя прокси"
            app:dependency="do_proxy" />

        <EditTextPreference
            app:key="proxy_password"
            app:title="Пароль прокси"
            app:dependency="do_proxy"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Автоматизация">

        <SwitchPreferenceCompat
            app:key="auto_fish"
            app:title="Автоматическая рыбалка"
            app:summary="Автоматический лов рыбы"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="auto_herb"
            app:title="Автоматический сбор трав"
            app:summary="Автоматический сбор трав"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="auto_mine"
            app:title="Автоматическая добыча руды"
            app:summary="Автоматическая добыча руды"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="auto_tree"
            app:title="Автоматическая рубка деревьев"
            app:summary="Автоматическая рубка деревьев"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="auto_dig"
            app:title="Автоматическое копание"
            app:summary="Автоматическое копание"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="auto_torg"
            app:title="Автоматическая торговля"
            app:summary="Автоматическая торговля"
            app:defaultValue="false" />

        <SwitchPreferenceCompat
            app:key="torg_active"
            app:title="Активность торговли"
            app:summary="Активность торговли"
            app:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>